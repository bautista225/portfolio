---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import ExperienceTimeline from "../components/ExperienceTimeline.astro";
import SectionContainer from "../components/SectionContainer.astro";
import BriefCaseIcon from "../icons/BriefCase.astro";
import Footer from "../components/Footer.astro";
import CodeIcon from "../icons/Code.astro";
import Projects from "../components/Projects.astro";
import Intro from "../components/Intro.astro";
---

<Layout
  title="Portfolio de Juan Bautista"
  description="Desarrollador web Full-Stack y apasionado por la IA. Especializado en crear aplicaciones web Ãºnicas."
>
  <main class="px-4">
