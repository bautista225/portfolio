---
import AstroIcon from "../icons/AstroIcon.astro";
import TailwindIcon from "../icons/Tailwind.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import { URLS } from "../data/intro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const currentYear = new Date().getFullYear();
---

<footer
  class="bg-black/20 rounded-lg shadow-sm m-4 backdrop-blur-lg w-full xl:w-[1120px] mx-auto mb-10"
>
  <div
    class="w-full mx-auto max-w-screen-xl p-4 md:flex md:items-center md:justify-between"
  >
    <span
      class="text-sm text-transparent bg-gradient-to-r from-cyan-600 to-purple-500 bg-clip-text"
      >Â© {currentYear}
      <a
        href={URLS.linkedIn}
        class="hover:underline"
        target="_blank"
        rel="noopener noreferrer">{t("footer.personName")}</a
      >
    </span>
    <span class="text-sm text-gray-300/40 flex flex-row items-center gap-x-1"
      >{t("footer.portfolioTechnologies1")}
      <AstroIcon class="size-3" /> Astro {t("footer.portfolioTechnologies2")}
      <TailwindIcon class="size-3" /> Tailwind</span
    >
  </div>
</footer>
